{
  "presets": [
    "next/babel",
    "@zeit/next-typescript/babel"
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "@": "./src",
          "@r": "./resources"
        }
      }
    ]
  ],
  "env": {
    "development": {
      "plugins": [
        ["styled-components", {
          "displayName": true,
          "fileName": true,
          "minify": false,
          "ssr": true
        }],
        ["./libraries/babel-plugin-environment-json"]
      ]
    },
    "production": {
      "plugins": [
        ["styled-components", {
          "displayName": false,
          "fileName": false,
          "minify": true,
          "ssr": true
        }],
        ["polished"],
        ["./libraries/babel-plugin-environment-json"]
      ]
    }
  }
}